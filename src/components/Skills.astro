---
import { getData } from "../utils/skills";
const data = getData();
---

<section id="skills" class="adjusted snap-start snap-always lg:h-screen">
  <div
    class="mx-auto flex h-full max-w-screen-xl flex-col items-center justify-center gap-y-24 px-6"
  >
    <!-- Tech stack -->
    <div>
      <h1
        class="bg-gradient-to-b from-sky-400 to-blue-700 bg-clip-text pb-4 text-center text-3xl font-bold text-transparent es:text-2xl lg:pb-8"
      >
        Tech stack
      </h1>
      <!-- List -->
      <div
        class="flex select-none flex-col px-5 lg:grid lg:grid-cols-3 lg:gap-x-6 lg:gap-y-0 lg:px-0"
      >
        {
          data &&
            data.map((item, index) => {
              return (
                <div
                  class={`border-border rounded-2xl border-2 p-4 es:p-2 lg:p-6 ${index !== 0 ? "mt-4 es:mt-2 md:mt-4 lg:mt-0" : ""}`}
                  data-aos="fade-up"
                  data-aos-anchor-placement="center-bottom"
                  data-aos-duration="800"
                >
                  <div class="flex items-center rounded-xl bg-card-dark p-2 es:p-1 lg:p-3">
                    {/* Front-end icon */}
                    {index === 0 && (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="size-6 es:size-4 lg:size-7"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
                        />
                      </svg>
                    )}
                    {/* Back-end icon */}
                    {index === 1 && (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="size-6 es:size-4 lg:size-7"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125"
                        />
                      </svg>
                    )}
                    {/* Tools icon */}
                    {index === 2 && (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="size-6 es:size-4 lg:size-7"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75"
                        />
                      </svg>
                    )}
                    <h1 class="pl-2 text-lg font-medium es:text-sm es:font-normal lg:text-xl lg:font-semibold">
                      {item.heading}
                    </h1>
                  </div>
                  <div class="grid grid-cols-2 gap-1 pt-2 text-center es:gap-1 es:pt-1 lg:gap-2 lg:pt-4">
                    {item.tech.map((i) => (
                      <span class="rounded-md bg-card-base bg-opacity-15 p-1 es:px-0 es:py-0 es:text-xs es:font-normal lg:text-base lg:font-semibold">
                        {i}
                      </span>
                    ))}
                  </div>
                </div>
              );
            })
        }
      </div>
    </div>
  </div>
</section>
<style>
  @media screen and (max-width: 768px) {
    .adjusted:target::before {
      content: "";
      display: block;
      height: 108px;
      visibility: hidden;
    }
  }
  @media screen and (max-width: 375px) {
    .adjusted:target::before {
      content: "";
      display: block;
      height: 80px;
      visibility: hidden;
    }
  }
</style>
