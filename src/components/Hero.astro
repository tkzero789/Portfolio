---
import { Image } from "astro:assets";
import MyAvatar from "../assets/images/Avatar/my-avatar.gif";
---

<section class="adjusted h-screen snap-start snap-always">
  <div
    class="mx-auto flex h-full max-w-screen-xl items-center justify-center px-6"
  >
    <div class="fade-in">
      <!-- Intro -->
      <div class="text-center">
        <div class="flex h-40 w-full justify-center pb-6 es:h-28 es:pb-3">
          <Image
            class="circle-clip h-full w-[136px] bg-white es:w-[100px]"
            src={MyAvatar}
            alt="avatar"
            loading="eager"
          />
        </div>
        <h1
          class="pb-6 text-2xl font-medium text-primary es:pb-3 es:text-xl lg:pb-8"
        >
          Hi, I&apos;m Thinh Tran
        </h1>
        <h1
          class="from bg-gradient-to-r from-[#42b0fa] from-25% via-[#bd35fc] via-50% to-[#f7754e] to-75% bg-clip-text pb-6 text-3xl font-bold text-primary text-transparent es:pb-3 es:text-2xl lg:pb-8 lg:text-5xl"
        >
          Frontend Developer
        </h1>
        <p
          class="pb-16 font-medium text-gray-400 es:pb-8 es:text-sm md:px-36 lg:px-80 lg:pb-20"
        >
          I bridge the gap between design vision and functional interfaces,
          building dynamic and responsive web experiences.
        </p>
      </div>
      <!-- Button -->
      <div class="h-full py-3 text-center es:py-2">
        <a
          href="https://github.com/tkzero789"
          class="mr-1 cursor-pointer rounded-full bg-white px-5 py-3 text-secondary hover:bg-slate-200 es:px-2 es:py-2"
          >Get in touch</a
        >
        <a
          href="/"
          class="ml-1 cursor-pointer rounded-full border px-5 py-3 text-primary hover:bg-gray-700 es:px-2 es:py-2"
          >My resume</a
        >
      </div>
    </div>
  </div>
</section>

<style>
  .circle-clip {
    clip-path: circle(50% at 50% 50%);
  }
  .fade-in {
    animation: fadeIn 1s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
