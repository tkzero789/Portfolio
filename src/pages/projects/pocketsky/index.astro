---
import { Image } from "astro:assets";
import Layout from "../../../layouts/Layout.astro";
import PocketSky from "../../../assets/images/PocketSky/pocketsky-project.webp";
import PocketSkySunny from "../../../assets/images/PocketSky/pocketsky-screenshot-sunny.webp";
import PocketSkyRain from "../../../assets/images/PocketSky/pocketsky-screenshot-rain.webp";
---

<Layout title="BaySide">
  <main transition:persist>
    <div class="mx-auto max-w-screen-xl px-6 pt-28">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ul class="flex items-center gap-2 text-sm">
          <li>
            <a href="/">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-house hover:stroke-[1.5]"
              >
                <title>Home</title>
                <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"
                ></path><path
                  d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                ></path></svg
              >
            </a>
          </li>
          <li>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-slash"><path d="M22 2 2 22"></path></svg
            >
          </li>
          <li><a href="/projects" class="hover:underline">Projects</a></li>
          <li>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-slash"><path d="M22 2 2 22"></path></svg
            >
          </li>
          <li class="font-semibold">PocketSky</li>
        </ul>
      </nav>
      <div
        class="fade-in mb-20 mt-10 rounded-3xl bg-transparent px-0 py-0 md:bg-card-dark md:px-10 md:py-10 md:shadow-lg lg:px-12 lg:pb-12 lg:pt-6"
      >
        <div class="flex flex-col gap-4 lg:flex-row-reverse lg:items-center">
          <!-- Main card info -->
          <div class="py-0 lg:w-3/5 lg:py-8">
            <Image
              class:list="w-full h-full rounded-md lg:rounded-3xl border-border border"
              src={PocketSky}
              alt="Pocket Sky"
              transition:name="PocketSky"
              loading="eager"
            />
          </div>
          <div class="flex flex-col lg:w-2/5">
            <div class="flex flex-col">
              <a
                target="_blank"
                href="https://www.dimebudget.com/"
                class="flex w-fit items-center text-xl font-bold hover:underline lg:text-2xl"
              >
                <h1 class="pr-1">PocketSky</h1>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-arrow-up-right"
                >
                  <>
                    <path d="M7 7h10v10"></path>
                    <path d="M7 17 17 7"></path>
                  </>
                </svg>
              </a>
              <p class="mt-2 text-sm lg:text-base">
                A simple weather app with search features, unit conversion, and
                essential forecast information.
              </p>
            </div>
            <div class="mt-3 flex flex-wrap gap-1 lg:mt-4 lg:gap-2">
              <span
                class="bg-badge rounded-full bg-opacity-15 px-3 py-1 text-xs lg:text-sm"
              >
                HTML
              </span>
              <span
                class="bg-badge rounded-full bg-opacity-15 px-3 py-1 text-xs lg:text-sm"
              >
                CSS
              </span>
              <span
                class="bg-badge rounded-full bg-opacity-15 px-3 py-1 text-xs lg:text-sm"
              >
                JavaScript
              </span>
            </div>
            {/* Buttons */}
            <div class="mt-6 flex gap-3 es:flex-col">
              <a
                target="_blank"
                href="https://main--brilliant-klepon-275efd.netlify.app/"
                class="flex w-fit items-center justify-center gap-2 rounded-full border bg-white px-2 py-2 text-sm hover:bg-slate-200 es:w-full md:px-4"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-link-2"
                >
                  <>
                    <path d="M9 17H7A5 5 0 0 1 7 7h2"></path>
                    <path d="M15 7h2a5 5 0 1 1 0 10h-2"></path>
                    <line x1="8" x2="16" y1="12" y2="12"></line>
                  </>
                </svg>
                Visit Website
              </a>
              <a
                target="_blank"
                href="https://github.com/tkzero789/PocketSky"
                class="flex w-fit items-center justify-center gap-2 rounded-full border px-2 py-2 text-sm hover:bg-gray-700 es:w-full md:px-4"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-github"
                  ><path
                    d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                  ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                >
                Github
              </a>
            </div>
          </div>
        </div>
        <!-- Key features -->
        <div class="mt-6 flex w-full flex-col gap-4 lg:mt-3 lg:w-9/12">
          <h2 class="text-lg font-bold">Key Features:</h2>
          <div class="grid grid-cols-1 gap-y-4 md:grid-cols-2">
            <!-- Feature item -->
            <div class="flex gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-building-2"
                ><path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"
                ></path><path d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"
                ></path><path d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"
                ></path><path d="M10 6h4"></path><path d="M10 10h4"></path><path
                  d="M10 14h4"></path><path d="M10 18h4"></path></svg
              >
              <div>
                <h3 class="font-semibold">City Search</h3>
                <p class="text-sm">Quickly find weather by city name</p>
              </div>
            </div>
            <!-- Feature item -->
            <div class="flex gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-thermometer-sun"
                ><path d="M12 9a4 4 0 0 0-2 7.5"></path><path d="M12 3v2"
                ></path><path d="m6.6 18.4-1.4 1.4"></path><path
                  d="M20 4v10.54a4 4 0 1 1-4 0V4a2 2 0 0 1 4 0Z"></path><path
                  d="M4 13H2"></path><path d="M6.34 7.34 4.93 5.93"></path></svg
              >
              <div>
                <h3 class="font-semibold">Unit Conversion</h3>
                <p class="text-sm">Switch between imperial and metric units</p>
              </div>
            </div>
          </div>
        </div>
        <!-- About -->
        <div class="mt-8 flex flex-col gap-4">
          <h2 class="text-lg font-bold">About:</h2>
          <p class="text-sm font-light lg:text-base">
            This weather app allows users to quickly access current weather
            conditions by city name. With the option to toggle between imperial
            and metric units, users can get personalized temperature readings
            for any location.
          </p>
          <ul
            class="flex list-inside list-disc flex-col gap-2 pl-0 text-sm font-light md:pl-8 lg:text-base"
          >
            <li>
              <span class="font-semibold">City Access:</span> quickly find current
              weather conditions by entering a city name.
            </li>
            <li>
              <span class="font-semibold">Unit Flexibility:</span> toggle between
              imperial and metric units for personalized temperature readings.
            </li>
            <li>
              <span class="font-semibold">Dynamic Background:</span> experience smooth
              animations that change the app's background based on the current weather.
            </li>
          </ul>
        </div>
        <!-- Techstack -->
        <div class="mt-8 flex flex-col gap-4">
          <h2 class="text-lg font-bold">Techstack:</h2>
          <p class="text-sm font-light lg:text-base">
            Here's an overview of the key technologies powering my project:
          </p>
          <ul
            class="flex list-inside list-disc flex-col gap-2 pl-0 text-sm font-light md:pl-8 lg:text-base"
          >
            <li>
              <span class="font-semibold">Corestack</span>: JavaScript.
            </li>
            <li>
              <span class="font-semibold">Styling</span>: CSS.
            </li>
            <li>
              <span class="font-semibold">Cloud Services and APIs</span>:
              OpenWeatherMap.
            </li>
          </ul>
        </div>
        <!-- App Screenshots -->
        <div class="mt-8 flex flex-col gap-4">
          <h2 class="text-lg font-bold">App Screenshots:</h2>
          <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
            <Image
              src={PocketSkySunny}
              alt="PocketSky Sunny Weather"
              class="rounded-3xl lg:h-[440px] xl:h-[600px]"
            />
            <Image
              src={PocketSkyRain}
              alt="PocketSky Sunny Weather"
              class="rounded-3xl lg:h-[440px] xl:h-[600px]"
            />
          </div>
        </div>
      </div>
    </div>
  </main>
  <style>
    .fade-in {
      animation: fadeIn 0.3s ease-in-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  </style>
</Layout>
